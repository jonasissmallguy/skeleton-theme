<section
  class="campaign-images"
  data-section-id="{{ section.id }}"
  style="
    background-color: {{ section.settings.bg_color }};
    color: {{ section.settings.text_color }};
    padding: {{ section.settings.image_padding }};
  "
>
  {% if section.settings.heading != blank %}
    <h2 class="campaign-heading" style="font-size: {{ section.settings.font_size }};">
      {{ section.settings.heading }}
    </h2>
  {% endif %}

  <div class="campaign-images__container {% if section.settings.second_image %}two-images{% endif %}" style="background-color: {{ section.settings.padding_bg_color }};">
    <div class="campaign-image-wrapper">
      <a href="{{ section.settings.first_image_link }}">
        <img src="{{ section.settings.first_image | image_url: width: 1000 }}" alt="Campaign image 1">
      </a>
      <div class="image-overlay image-position-{{ section.settings.text_position }}" style="
        font-family: {{ section.settings.text_font }};
        font-size: {{ section.settings.text_size }};
        font-style: {{ section.settings.text_style }};
        font-weight: {{ section.settings.text_weight }};
        color: {{ section.settings.overlay_text_color }};
        gap: {{ section.settings.text_gap }};
      ">
        {% if section.settings.left_image_title != blank %}
          <h3>{{ section.settings.left_image_title }}</h3>
        {% endif %}
        {% if section.settings.left_image_text != blank %}
          <p>{{ section.settings.left_image_text }}</p>
        {% endif %}
        {% if section.settings.left_image_button_text != blank %}
          <a href="{{ section.settings.left_image_button_link }}" class="overlay-button button-size-{{ section.settings.button_size }}" style="
            background-color: {{ section.settings.button_bg }};
            color: {{ section.settings.button_color }};
          ">
            {{ section.settings.left_image_button_text }}
          </a>
        {% endif %}
      </div>
    </div>

    {% if section.settings.second_image %}
      <a href="{{ section.settings.second_image_link }}">
        <img src="{{ section.settings.second_image | image_url: width: 1000 }}" alt="Campaign image 2">
      </a>
    {% endif %}
  </div>
</section>

{% stylesheet %}
/* Layout */
.campaign-images {
  width: 100vw;
  height: 852px; /* Fixed height like before */
  position: relative;
  left: 50%;
  right: 50%;
  margin-left: -50vw;
  margin-right: -50vw;
  overflow: hidden;
  padding: 0;
  background-color: #FFFCEE;
}

.campaign-heading {
  text-align: center;
  margin: 0;
  padding: 1rem 0;
}

/* Container */
.campaign-images__container {
  display: flex;
  width: 100%;
  gap: 0;
  flex-wrap: nowrap;
  height: 100%;
}

/* Image Containers */
.campaign-images__container.two-images > .campaign-image-wrapper,
.campaign-images__container.two-images > a {
  width: 50%;
}

.campaign-images__container img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

/* Image Wrapper */
.campaign-image-wrapper {
  position: relative;
  width: 100%;
  height: 100%;
}

/* Overlay */
.image-overlay {
  position: absolute;
  z-index: 2;
  max-width: 80%;
  display: flex;
  flex-direction: column;
}

.image-position-top-left { top: 10%; left: 10%; text-align: left; }
.image-position-top-right { top: 10%; right: 10%; text-align: right; }
.image-position-center { top: 50%; left: 50%; transform: translate(-50%, -50%); text-align: center; }
.image-position-bottom-left { bottom: 10%; left: 10%; text-align: left; }
.image-position-bottom-right { bottom: 10%; right: 10%; text-align: right; }

/* Text Styles */
.image-overlay h3 {
  margin: 0 0 0.5rem 0;
}
.image-overlay p {
  margin: 0 0 1rem 0;
}

/* Button Styles */
.overlay-button {
  text-decoration: none;
  font-weight: bold;
  border-radius: 4px;
  display: inline-block;
  text-align: center;
  padding: 0.75rem 1.5rem;
}

.button-size-small { font-size: 0.8rem; padding: 0.5rem 1rem; }
.button-size-medium { font-size: 1rem; padding: 0.75rem 1.5rem; }
.button-size-large { font-size: 1.25rem; padding: 1rem 2rem; }
{% endstylesheet %}

