<section class="campaign-images" data-section-id="{{ section.id }}">
  {% if section.settings.heading %}
    <h2 class="campaign-heading" style="text-align: center;">{{ section.settings.heading }}</h2>
  {% endif %}

  <div class="campaign-images__container {% if section.settings.second_image %}two-images{% endif %}">
    <a
      href="{{ section.settings.first_image_link }}"
      class="campaign-image-wrapper{% if section.settings.show_border %} has-border{% endif %}"
      style="{% if section.settings.show_border %}border-color: {{ section.settings.border_color }};{% endif %}"
    >
      <img
        src="{{ section.settings.first_image | image_url }}"
        alt="Campaign image 1"
        loading="lazy"
      />
    </a>

    {% if section.settings.second_image %}
      <a
        href="{{ section.settings.second_image_link }}"
        class="campaign-image-wrapper{% if section.settings.show_border %} has-border{% endif %}"
        style="{% if section.settings.show_border %}border-color: {{ section.settings.border_color }};{% endif %}"
      >
        <img
          src="{{ section.settings.second_image | image_url }}"
          alt="Campaign image 2"
          loading="lazy"
        />
      </a>
    {% endif %}
  </div>
</section>

{% stylesheet %}
.campaign-images__container {
  display: flex;
  flex-wrap: wrap;
  gap: 2rem;
  justify-content: center;
  padding: 2rem 1rem;
}

.campaign-images__container.two-images a {
  width: 100%;
  max-width: 750px;
}

.campaign-image-wrapper {
  display: block;
  width: 100%;
  max-width: 1504px;
  height: 752px;
  overflow: hidden;
  border-radius: 8px;
  box-sizing: border-box;
  transition: transform 0.3s ease;
}

.campaign-image-wrapper img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

.campaign-image-wrapper:hover img {
  transform: scale(1.02);
}

.has-border {
  border: 4px solid;
}
{% endstylesheet %}

{% schema %}
{
  "name": "Campaign Images",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading (optional)"
    },
    {
      "type": "image_picker",
      "id": "first_image",
      "label": "First Campaign Image"
    },
    {
      "type": "url",
      "id": "first_image_link",
      "label": "First Image Link"
    },
    {
      "type": "image_picker",
      "id": "second_image",
      "label": "Second Campaign Image (optional)"
    },
    {
      "type": "url",
      "id": "second_image_link",
      "label": "Second Image Link"
    },
    {
      "type": "checkbox",
      "id": "show_border",
      "label": "Show border around images",
      "default": false
    },
    {
      "type": "color",
      "id": "border_color",
      "label": "Border color",
      "default": "#000000"
    }
  ],
  "presets": [
    {
      "name": "Campaign Images"
    }
  ]
}
{% endschema %}