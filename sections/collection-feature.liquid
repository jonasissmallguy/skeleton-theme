<section class="collection-feature" style="background-color: {{ section.settings.bg_color }}">
  <div class="collection-feature__wrapper">
    <div class="collection-feature__text">
      <h2>{{ section.settings.heading }}</h2>
      <p>{{ section.settings.text }}</p>
      <a href="{{ section.settings.button_url }}" class="collection-feature__button">
        {{ section.settings.button_label }}
      </a>
    </div>

    <div class="collection-feature__media">
      {% if section.settings.video != blank %}
        {{ section.settings.video | video_tag: autoplay: true, loop: true, muted: true, controls: false }}
      {% elsif section.settings.image != blank %}
        <img
          src="{{ section.settings.image | image_url: width: 1200 }}"
          alt="Feature media"
          class="collection-feature__image"
        />
      {% endif %}
    </div>
  </div>
</section>


{% stylesheet %}
.collection-feature {
  width: 100vw;
  margin-left: -50vw;
  margin-right: -50vw;
  left: 50%;
  right: 50%;
  position: relative;
  display: flex;
  justify-content: center;
  box-sizing: border-box;
}

.collection-feature__wrapper {
  display: flex;
  width: 100%;
  min-height: 100vh; /* or a specific height if you prefer */
  align-items: stretch;
  box-sizing: border-box;
}

.collection-feature__text,
.collection-feature__media {
  flex: 1;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.collection-feature__text {
  padding: 4rem;
  justify-content: center;
  color: black;
}

.collection-feature__media {
  position: relative;
  overflow: hidden;
}

.collection-feature__image,
.collection-feature__media video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}

{% endstylesheet %}

{% schema %}
{
  "name": "Collection Feature",
  "settings": [
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background color",
      "default": "#f7f7f7"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Shop the New Collection"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Description text"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Explore Now"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button link"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image (optional)"
    },
    {
      "type": "video",
      "id": "video",
      "label": "Video (optional)"
    }
  ],
  "presets": [
    {
      "name": "Collection Feature"
    }
  ]
}
{% endschema %}
