<section class="collection-scroll-bar-section">
  {% if section.settings.featured_image != blank %}
    <div class="collection-featured-image">
      <img src="{{ section.settings.featured_image | image_url: width: 2000 }}" alt="Featured image" loading="lazy">
    </div>
  {% endif %}

  <div class="collection-scroll-bar-inner">
    <ul class="collection-scroll-list" role="list">
      {% for block in section.blocks %}
        {% assign collection = collections[block.settings.collection] %}
        {% if collection %}
          {% assign label = block.settings.custom_label | default: collection.title %}
          {% assign link_url = block.settings.custom_url | default: collection.url %}
          <li class="collection-scroll-item">
            <a
              href="{{ link_url }}"
              class="collection-scroll-link"
              style="
                background-color: {{ section.settings.button_background_color | default: '#D3CBA3' }};
                font-size: {{ section.settings.button_text_size | default: 15 }}px;
              "
            >
              <p class="collection-title">{{ label }}</p>
            </a>
          </li>
        {% endif %}
      {% endfor %}
    </ul>
  </div>
</section>

{% stylesheet %}
.collection-scroll-bar-section {
  position: relative;
  width: 100vw;
  left: 50%;
  margin-left: -50vw;
  margin-right: -50vw;
  background-color: #FFFCEE;
  padding: 3rem 0;
  overflow: hidden;
}

.collection-featured-image {
  width: 100%;
  max-height: 500px;
  overflow: hidden;
  margin-bottom: 2rem;
}

.collection-featured-image img {
  width: 100%;
  object-fit: cover;
}

.collection-scroll-bar-inner {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.collection-scroll-list {
  display: grid;
  grid-auto-flow: column;
  grid-auto-columns: 223.38px;
  gap: 16px;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
}

.collection-scroll-list::-webkit-scrollbar {
  display: none;
}

.collection-scroll-item {
  scroll-snap-align: start;
  display: flex;
  align-items: center;
  justify-content: center;
}

.collection-scroll-link {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 223.38px;
  height: 48px;
  text-align: center;
  text-transform: uppercase;
  font-weight: 500;
  white-space: nowrap;
  border-radius: 4px;
  text-decoration: none;
  color: #000;
  transition: background 0.2s ease;
  padding: 0;
  box-sizing: border-box;
}

.collection-scroll-link:hover {
  opacity: 0.85;
}

.collection-title {
  margin: 0;
}
{% endstylesheet %}

{% schema %}
{
  "name": "Collection Buttons",
  "settings": [
    {
      "type": "image_picker",
      "id": "featured_image",
      "label": "Featured image"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "View All Collections"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    },
    {
      "type": "color",
      "id": "button_background_color",
      "label": "Button background color",
      "default": "#D3CBA3"
    },
    {
      "type": "range",
      "id": "button_text_size",
      "label": "Button text size",
      "min": 10,
      "max": 30,
      "step": 1,
      "unit": "px",
      "default": 15
    }
  ],
  "blocks": [
    {
      "type": "collection_item",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "custom_label",
          "label": "Custom Label (optional)"
        },
        {
          "type": "url",
          "id": "custom_url",
          "label": "Custom URL (optional)"
        }
      ]
    }
  ],
  "max_blocks": 5,
  "presets": [
    {
      "name": "Horizontal Collection Scroll",
      "category": "Custom",
      "blocks": []
    }
  ]
}
{% endschema %}
