/* Featured image full width */
.collection-featured-image {
  width: 100%;
  max-height: 500px;
  overflow: hidden;
  margin-bottom: 2rem;
}
.collection-featured-image img {
  width: 100%;
  object-fit: cover;
}

/* Inner container */
.collection-scroll-bar-inner {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 16px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* Scrollable collection list */
.collection-scroll-list {
  display: grid;
  grid-auto-flow: column;
  grid-auto-columns: calc(20% - 12.8px);
  gap: 16px;
  overflow-x: auto;
  scroll-snap-type: x mandatory;
  -webkit-overflow-scrolling: touch;
  scrollbar-width: none;
}

.collection-scroll-list::-webkit-scrollbar {
  display: none;
}

.collection-scroll-item {
  scroll-snap-align: start;
  display: flex;
  align-items: center;
  justify-content: center;
}

.collection-scroll-link {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: auto;
  padding: 12px 16px;
  background-color: #f0ebe1;
  text-align: center;
  text-transform: capitalize;
  font-weight: 500;
  font-size: 14px;
  white-space: nowrap;
  border-radius: 4px;
  text-decoration: none;
  color: #000;
  transition: background 0.2s ease;
}

.collection-scroll-link:hover {
  background-color: #e0dbd0;
}

.collection-description {
  font-size: 12px;
  color: #666;
  margin-top: 4px;
}

.scroll-bar-button-container {
  margin-top: 20px;
  text-align: center;
}

.scroll-bar-button {
  padding: 10px 24px;
  font-weight: 600;
  font-size: 16px;
  background-color: black;
  color: white;
  border-radius: 6px;
  text-decoration: none;
  transition: background-color 0.3s ease;
}

.scroll-bar-button:hover {
  background-color: #333;
}
{% endstylesheet %}

