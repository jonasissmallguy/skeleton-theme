<section class="collection-showcase" data-section-id="{{ section.id }}">
  <div class="collection-showcase__grid">
    {% for block in section.blocks %}
      {% assign collection = collections[block.settings.collection] %}
      {% if collection %}
        <div class="collection-card">
          <a href="{{ collection.url }}">
            <img
              src="{{ block.settings.image | image_url: width: 630 }}"
              alt="{{ collection.title }}"
              class="collection-card__image"
            />
          </a>
          <div class="collection-card__text">
            <h3>{{ block.settings.heading | default: collection.title }}</h3>
            {% if block.settings.text %}
              <p>{{ block.settings.text }}</p>
            {% endif %}
            <a href="{{ collection.url }}" class="collection-card__button">
              {{ block.settings.button_label }}
            </a>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>


{% stylesheet %}
.collection-showcase {
  width: 100vw; /* force full viewport width */
  position: relative;
  left: 50%;
  right: 50%;
  margin-left: -50vw;
  margin-right: -50vw;
  padding: 3rem 2rem;
  background-color: #FFFCEE;
}

.collection-showcase__grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr); /* exactly 3 columns */
  gap: 2rem;
}

.collection-card {
  width: 100%; /* make the card fill its grid cell */
  text-align: center;
}

.collection-card__image {
  width: 100%; /* make image responsive */
  height: auto;
  aspect-ratio: 3 / 4; /* optional, keeps consistent height ratio */
  object-fit: cover;
  box-shadow: 0 4px 16px rgba(0, 0, 0, 0.1);
  transition: transform 0.3s ease;
}

.collection-card__text {
  margin-top: 1rem;
  text-align: left; /* align text content inside the card */
}

.collection-card__text h3 {
  font-size: 1.4rem;
  margin-bottom: 0.5rem;
  font-weight: 600;
  text-align: left; /* optional now, but consistent */
}

.collection-card__text p {
  color: #555;
  font-size: 0.95rem;
  margin-bottom: 1rem;
  max-width: 100%; /* ensure full width if previously constrained */
  margin-left: 0;
  margin-right: 0;
  text-align: left;
}

.collection-card__button {
  display: inline-block;
  color: #000;
  text-decoration: underline;
  font-size: 0.95rem;
  font-weight: 500;
  text-align: left;
  margin-top: 0.5rem;
}

.collection-card__button:hover {
  color: #333;
}
{% endstylesheet %}



{% schema %}
{
  "name": "Collection Showcase",
  "max_blocks": 3,
  "blocks": [
    {
      "type": "collection",
      "name": "Collection Card",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Choose a collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading (optional)"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text (optional)"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Shop now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Showcase",
      "blocks": [
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}
