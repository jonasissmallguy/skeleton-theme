<section class="collection-showcase" data-section-id="{{ section.id }}">
  <div class="collection-showcase__grid">
    {% for block in section.blocks %}
      {% assign collection = collections[block.settings.collection] %}
      {% if collection %}
        <div class="collection-card">
          <a href="{{ collection.url }}">
            <img
              src="{{ block.settings.image | image_url: width: 630 }}"
              alt="{{ collection.title }}"
              class="collection-card__image"
            />
          </a>
          <div class="collection-card__text">
            <h3>{{ block.settings.heading | default: collection.title }}</h3>
            {% if block.settings.text %}
              <p>{{ block.settings.text }}</p>
            {% endif %}
            <a href="{{ collection.url }}" class="collection-card__button">
              {{ block.settings.button_label }}
            </a>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>


{% stylesheet %}
.collection-showcase {
  padding: 3rem 2rem;
  background-color: #fff;
}

.collection-showcase__grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  justify-items: center;
}

.collection-card {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  max-width: 650px;
}

.collection-card__image {
  width: 629.34px;
  height: 786.91px;
  object-fit: cover;
  border-radius: 8px;
  box-shadow: 0 4px 16px rgba(0,0,0,0.1);
  transition: transform 0.3s ease;
}

.collection-card__image:hover {
  transform: scale(1.02);
}

.collection-card__text {
  margin-top: 1rem;
}

.collection-card__text h3 {
  font-size: 1.4rem;
  margin-bottom: 0.5rem;
  font-weight: 600;
}

.collection-card__text p {
  color: #555;
  font-size: 0.95rem;
  margin-bottom: 1rem;
  max-width: 90%;
  margin-left: auto;
  margin-right: auto;
}

.collection-card__button {
  background-color: black;
  color: white;
  padding: 0.6rem 1.2rem;
  border: none;
  text-decoration: none;
  border-radius: 4px;
  font-size: 0.9rem;
  transition: background-color 0.2s ease;
}

.collection-card__button:hover {
  background-color: #333;
}
{% endstylesheet %}



{% schema %}
{
  "name": "Collection Showcase",
  "max_blocks": 3,
  "blocks": [
    {
      "type": "collection",
      "name": "Collection Card",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Choose a collection"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Custom image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading (optional)"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text (optional)"
        },
        {
          "type": "text",
          "id": "button_label",
          "label": "Button label",
          "default": "Shop now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection Showcase",
      "blocks": [
        { "type": "collection" },
        { "type": "collection" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}
