{% comment %}
  This section is used in the collection template to render collection page
  listing all products within a collection.

  https://shopify.dev/docs/storefronts/themes/architecture/templates/collection
{% endcomment %}

<div class="collection-wrapper">
  <h1 class="collection-title">{{ collection.title }}</h1>
  <div class="collection-text">
    <a>
      testerajdaj
    </a>
    
  </div>

  <div class="collection-products">
    {% paginate collection.products by 20 %}
      {% for product in collection.products %}
        <div class="collection-product">
          {% if product.featured_image %}
            {% render 'image',
              class: 'collection-product__image',
              image: product.featured_image,
              url: product.url,
              width: 400,
              height: 400,
              crop: 'center'
            %}
          {% endif %}
          <div class="collection-product__content">
            <p>{{ product.title | escape | link_to: product.url }}</p>
            <p>{{ product.price | money }}</p>
          </div>
        </div>
      {% endfor %}

      {{ paginate | default_pagination }}
    {% endpaginate %}
  </div>
</div>

{% stylesheet %}
  .collection-wrapper {
    width: 100vw;
    max-width: 100vw;
    margin-left: calc(-50vw + 50%);
    padding: 0 2vw;
    box-sizing: border-box;
  }

  .collection-title {
    font-size: 2rem;
    margin-bottom: 24px;
  }

  .collection-products {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 24px;
  }

  .collection-product {
    border: 1px solid #ddd;
    padding: 15px;
  }

  .collection-product__image img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }
{% endstylesheet %}

{% schema %}
{
  "name": "t:general.collection",
  "settings": []
}
{% endschema %}
