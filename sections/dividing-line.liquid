{% comment %}
Simple horizontal divider section
{% endcomment %}

<div
  role="separator"
  aria-orientation="horizontal"
  class="section-divider"
  style="
    height: {{ section.settings.height }}px;
    background-color: {{ section.settings.color }};
    margin-top: {{ section.settings.margin_top }}px;
    margin-bottom: {{ section.settings.margin_bottom }}px;
    max-width: {{ section.settings.max_width }};
  "
>
</div>

<style>
.section-divider {
  width: 100%;
  margin-left: auto;
  margin-right: auto;
}
</style>

{% schema %}
{
  "name": "Section Divider",
  "settings": [
    {
    "type": "range",
    "id": "height",
    "label": "Line Height (px)",
    "default": 1,
    "min": 1,
    "max": 20,
    "step": 1
    },
    {
      "type": "color",
      "id": "color",
      "label": "Line Color",
      "default": "#000000"
    },
    {
      "type": "text",
      "id": "max_width",
      "label": "Max Width (e.g. 100%, 1200px)",
      "default": "1200px"
    },
    {
      "type": "number",
      "id": "margin_top",
      "label": "Top Margin (px)",
      "default": 48
    },
    {
      "type": "number",
      "id": "margin_bottom",
      "label": "Bottom Margin (px)",
      "default": 48
    }
  ],
  "presets": [
    {
      "name": "Divider Line"
    }
  ]
}
{% endschema %}
