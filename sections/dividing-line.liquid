{% comment %}
Full-width horizontal divider section with customizable color and no padding
{% endcomment %}

<div
  class="divider-wrapper"
  style="
    background-color: {{ section.settings.background_color | default: '#FFFCEE' }};
    padding-top: {{ section.settings.margin_top }}px;
    padding-bottom: {{ section.settings.margin_bottom }}px;
  "
>
  <div
    role="separator"
    aria-orientation="horizontal"
    class="section-divider"
    style="
      height: {{ section.settings.height }}px;
      background-color: {{ section.settings.color }};
      max-width: {{ section.settings.max_width }};
    "
  ></div>
</div>

<style>
.divider-wrapper {
  width: 100vw;
  margin-left: calc(-50vw + 50%);
  margin-right: calc(-50vw + 50%);
  padding-left: 0;
  padding-right: 0;
}

.section-divider {
  width: 100%;
  margin-left: auto;
  margin-right: auto;
}
</style>

{% schema %}
{
  "name": "Section Divider",
  "settings": [
    {
      "type": "range",
      "id": "height",
      "label": "Line Height (px)",
      "default": 1,
      "min": 1,
      "max": 20,
      "step": 1
    },
    {
      "type": "color",
      "id": "color",
      "label": "Line Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Section Background Color",
      "default": "#FFFCEE"
    },
    {
      "type": "text",
      "id": "max_width",
      "label": "Max Width (e.g. 100%, 1200px)",
      "default": "1200px"
    },
    {
      "type": "number",
      "id": "margin_top",
      "label": "Top Margin (px)",
      "default": 48
    },
    {
      "type": "number",
      "id": "margin_bottom",
      "label": "Bottom Margin (px)",
      "default": 48
    }
  ],
  "presets": [
    {
      "name": "Divider Line"
    }
  ]
}
{% endschema %}
