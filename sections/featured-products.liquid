<section class="featured-products" data-section-id="{{ section.id }}">
  <div class="featured-products__inner">
    {% if section.settings.title != blank %}
      <h2 class="featured-products__title">{{ section.settings.title }}</h2>
    {% endif %}

    {% if collections[section.settings.collection] %}
      <div class="product-grid">
        {% for product in collections[section.settings.collection].products %}
          <div class="product-card">
            <a href="{{ product.url }}" class="product-card__image">
              <div class="product-card__image-wrapper">
                <img src="{{ product.featured_image | image_url: width: 252, height: 352, crop: 'center' }}" alt="{{ product.title }}" />
              </div>
            </a>
            <div class="product-card__meta">
              <span class="product-card__tag">NYHEDER</span>
              <h3 class="product-card__title">{{ product.title }}</h3>
              <span class="product-card__price">
                {% if product.price_varies %}
                  Fra {{ product.price_min | money }}
                {% else %}
                  {{ product.price | money }}
                {% endif %}
              </span>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p>VÃ¦lg en kollektion i temaeditoren.</p>
    {% endif %}
  </div>
</section>




{% stylesheet %}
.featured-products {
  width: 100vw;
  margin-left: -50vw;
  margin-right: -50vw;
  left: 50%;
  right: 50%;
  position: relative;
  background-color: #FFFCEE;
  padding: calc(3rem + 2rem) 0 3rem 0; /* 6rem header space + 2rem inner top space */
}

.featured-products__inner {
  padding-left: 1rem;
  padding-right: 0;
  max-width: none;
}
.featured-products__title {
  font-size: 2rem;
  text-align: left;
  font-family: serif;
  font-style: italic;
  margin: 3rem 0 2rem 0;
  margin-top: 1rem;
  padding: 0;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 2rem;
  margin-top: 0;
}

.product-card {
  text-align: left;
  font-family: sans-serif;
}

.product-card__image-wrapper {
  background-color: #FCF8D9;
  aspect-ratio: 251 / 352;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0.5rem;
  overflow: hidden;
}

.product-card__image img {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
  display: block;
  user-select: none;
  pointer-events: auto;
  vertical-align: middle;
}

.product-card__meta {
  margin-top: 0.75rem;
}

.product-card__tag {
  font-size: 0.75rem;
  text-transform: uppercase;
  color: #555;
}

.product-card__title {
  font-size: 1rem;
  font-weight: bold;
  margin-top: 0.25rem;
}

.product-card__price {
  font-size: 0.95rem;
  color: #333;
  margin-top: 0.25rem;
}

{% endstylesheet %}
{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section title",
      "default": "Nyheder"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select collection"
    }
  ],
  "presets": [
    {
      "name": "Product Showcase"
    }
  ]
}
{% endschema %}
