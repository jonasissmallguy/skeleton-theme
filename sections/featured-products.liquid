<section class="featured-products" data-section-id="{{ section.id }}">
  <div class="featured-products__inner">
    {% if section.settings.title != blank %}
      <h2 class="featured-products__title">{{ section.settings.title }}</h2>
    {% endif %}

    {% assign featured_collection = collections[section.settings.collection] %}
    {% if featured_collection and featured_collection.products.size > 0 %}
      <div class="product-grid">
        {% for product in featured_collection.products %}
          <div class="product-card">
            <a href="{{ product.url }}" class="product-card__image">
              <div class="product-card__image-wrapper">
                {% assign first_image = product.images[0] %}
                {% assign second_image = product.images[1] %}
                {% if first_image %}
                  <img 
                    src="{{ first_image | image_url: width: 252, height: 352, crop: 'center' }}" 
                    alt="{{ product.title | escape }}" 
                    class="primary-image" 
                    loading="lazy" 
                  />
                {% endif %}
                {% if second_image %}
                  <img 
                    src="{{ second_image | image_url: width: 252, height: 352, crop: 'center' }}" 
                    alt="{{ product.title | escape }} - hover" 
                    class="hover-image" 
                    loading="lazy" 
                  />
                {% endif %}
              </div>
            </a>
            <div class="product-card__meta">
              <span class="product-card__tag">NYHEDER</span>
              <h3 class="product-card__title">{{ product.title }}</h3>
              <span class="product-card__price">
                {% if product.price_varies %}
                  Fra {{ product.price_min | money }}
                {% else %}
                  {{ product.price | money }}
                {% endif %}
              </span>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p>VÃ¦lg en kollektion i temaeditoren.</p>
    {% endif %}
  </div>
</section>

{% stylesheet %}
.featured-products {
  position: relative;
  width: 100vw;
  margin-left: -50vw;
  left: 50%;
  background-color: #FFFCEE;
  padding: 5rem 1rem 3rem 1rem;
}

.featured-products__title {
  font-size: 2rem;
  font-family: serif;
  font-style: italic;
  text-align: left;
  margin-bottom: 2rem;
}

.product-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 2rem;
}

.product-card {
  font-family: sans-serif;
  text-align: left;
}

.product-card__image-wrapper {
  position: relative;
  background-color: #FCF8D9;
  aspect-ratio: 251 / 352;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.product-card__image-wrapper img {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  transition: opacity 0.4s ease;
}

.primary-image {
  opacity: 1;
  z-index: 1;
}

.hover-image {
  opacity: 0;
  z-index: 2;
}

.product-card:hover .primary-image {
  opacity: 0;
}

.product-card:hover .hover-image {
  opacity: 1;
}

.product-card__meta {
  margin-top: 0.75rem;
}

.product-card__tag {
  font-size: 0.75rem;
  text-transform: uppercase;
  color: #555;
}

.product-card__title {
  font-size: 1rem;
  font-weight: bold;
  margin-top: 0.25rem;
}

.product-card__price {
  font-size: 0.95rem;
  color: #333;
  margin-top: 0.25rem;
}
{% endstylesheet %}

{% schema %}
{
  "name": "Featured Products",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section title",
      "default": "Nyheder"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Select collection"
    }
  ],
  "presets": [
    {
      "name": "Product Showcase"
    }
  ]
}
{% endschema %}
