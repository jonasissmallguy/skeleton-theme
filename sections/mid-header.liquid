<section class="mid-header" data-section-type="mid-header" data-section-id="{{ section.id }}">
  <div class="mid-header__left">
    <div class="mid-header__logo">
      <a href="{{ routes.root_url }}">
        <img
          src="{{ section.settings.logo | image_url: width: section.settings.logo_height | times: 64 | round }}"
          alt="Logo"
          style="height: {{ section.settings.logo_height }}rem;">
      </a>
    </div>

    <nav class="mid-header__menu">
      {% if section.settings.menu %}
        {% for link in linklists[section.settings.menu].links %}
          <a href="{{ link.url }}">{{ link.title }}</a>
        {% endfor %}
      {% else %}
        <span style="color: red;">âš  No menu selected in Theme Editor</span>
      {% endif %}
    </nav>
  </div>
</section>

{% stylesheet %}
.mid-header {
  width: 100vw;
  position: relative;
  left: 50%;
  right: 50%;
  margin-left: -50vw;
  margin-right: -50vw;
  height: auto;
  background-color: #FFFCEE;
  display: flex;
  align-items: center;
  padding: 0 2rem;
  box-sizing: border-box;
  justify-content: flex-start;
}

.mid-header__left {
  display: flex;
  align-items: center;
  gap: 2rem;
}

.mid-header__logo img {
  display: block;
  height: auto;
  max-width: 100%;
}

.mid-header__menu {
  display: flex;
  gap: 1.5rem;
}

.mid-header__menu a {
  color: black;
  text-decoration: none;
}

.mid-header__menu a:hover {
  text-decoration: underline;
}
{% endstylesheet %}

{% schema %}
{
  "name": "Main Header Menu",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Select menu"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Upload logo"
    },
    {
      "type": "range",
      "id": "logo_height",
      "label": "Logo height (rem)",
      "min": 1,
      "max": 10,
      "step": 0.1,
      "default": 2.5
    }
  ],
  "presets": [
    {
      "name": "Header with Logo and Menu"
    }
  ]
}
{% endschema %}
