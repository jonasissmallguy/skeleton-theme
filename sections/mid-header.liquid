<section class="mid-header" data-section-type="mid-header" data-section-id="{{ section.id }}">
  <div class="mid-header__left">
    <div class="mid-header__logo">
      <a href="{{ routes.root_url }}">
        <img src="{{ section.settings.logo | image_url: width: 200 }}" alt="Logo">
      </a>
    </div>

    <nav class="mid-header__menu">
      {% if section.settings.menu %}
        {% for link in linklists[section.settings.menu].links %}
          <a href="{{ link.url }}">{{ link.title }}</a>
        {% endfor %}
      {% else %}
        <span style="color: red;">âš  No menu selected in Theme Editor</span>
      {% endif %}
    </nav>
  </div>

  <div class="mid-header__right">
    <a href="#search" class="mid-header__icon">ğŸ”</a>
    <a href="#user" class="mid-header__icon">ğŸ‘¤</a>
    <a href="#cart" class="mid-header__icon">ğŸ›’</a>
  </div>
</section>


{% stylesheet %}
.mid-header {
  width: 100vw;
  position: fixed;
  top: 2.5rem; /* match top-banner height */
  left: 0;
  height: 3.5rem;
  background-color: #FFFCEE;
  display: flex;
  align-items: center;
  padding: 0 1rem;
  box-sizing: border-box;
  justify-content: space-between;
  z-index: 1000;
  border-bottom: 1px solid #00680a;

}

.mid-header__left {
  display: flex;
  align-items: center;
  gap: 2rem;
}

.mid-header__logo img {
  height: 1.5rem;
}

.mid-header__menu {
  display: flex;
  gap: 1.5rem;
}

.mid-header__menu a {
  color: black;
  text-decoration: none;
}

.mid-header__menu a:hover {
  text-decoration: underline;
}

.mid-header__right {
  display: flex;
  gap: 1.25rem;
  align-items: center;
}

.mid-header__icon {
  font-size: 1.25rem;
  text-decoration: none;
  color: black;
}

.mid-header__icon:hover {
  opacity: 0.7;
}
{% endstylesheet %}


{% schema %}
{
  "name": "Main Header Menu",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Select menu"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Upload logo"
    }
  ],
  "presets": [
    {
      "name": "Header with Logo and Menu"
    }
  ]
}
{% endschema %}

