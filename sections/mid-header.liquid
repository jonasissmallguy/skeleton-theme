<section class="mid-header" data-section-type="mid-header" data-section-id="{{ section.id }}">
  <div class="mid-header__left">
    <div class="mid-header__logo">
      <a href="{{ routes.root_url }}">
        <img src="{{ settings.logo | image_url: width: 200 }}" alt="Logo">
      </a>
    </div>

    <nav class="mid-header__menu">
      {% if section.settings.menu %}
        {% for link in linklists[section.settings.menu].links %}
          <a href="{{ link.url }}">{{ link.title }}</a>
        {% endfor %}
      {% else %}
        <span style="color: red;">âš  No menu selected in Theme Editor</span>
      {% endif %}
    </nav>
  </div>

  <div class="mid-header__right">
    <a href="#search" class="mid-header__icon" aria-label="Search">
      {% if settings.search_icon %}
        <img src="{{ settings.search_icon | image_url: width: 24 }}" alt="Search icon">
      {% else %}
        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
          <path d="M21 20l-4.35-4.35M10 17a7 7 0 1 1 0-14 7 7 0 0 1 0 14z" stroke="currentColor" stroke-width="2" fill="none" />
        </svg>
      {% endif %}
    </a>

    <a href="#user" class="mid-header__icon" aria-label="User">
      {% if settings.user_icon %}
        <img src="{{ settings.user_icon | image_url: width: 24 }}" alt="User icon">
      {% else %}
        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 12a5 5 0 1 0-5-5 5 5 0 0 0 5 5zm0 2c-3.33 0-10 1.67-10 5v3h20v-3c0-3.33-6.67-5-10-5z"/>
        </svg>
      {% endif %}
    </a>

    <a href="#cart" class="mid-header__icon" aria-label="Cart">
      {% if settings.cart_icon %}
        <img src="{{ settings.cart_icon | image_url: width: 24 }}" alt="Cart icon">
      {% else %}
        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24">
          <path d="M7 4h-2l-3 9v11h20v-11l-3-9h-2l2 6h-14l2-6zm3 2h4v2h-4v-2zm-4 14h2v2h-2v-2zm10 0h2v2h-2v-2z"/>
        </svg>
      {% endif %}
    </a>
  </div>
</section>

{% stylesheet %}
.mid-header {
  width: 100vw;
  position: fixed;
  top: 2.5rem; /* match top-banner height */
  left: 0;
  height: 3.5rem;
  background-color: #FFFCEE;
  display: flex;
  align-items: center;
  padding: 0 1rem;
  box-sizing: border-box;
  justify-content: space-between;
  z-index: 1000;
  border-bottom: 1px solid #FFEA92;
}

.mid-header__left {
  display: flex;
  align-items: center;
  gap: 2rem;
}

.mid-header__logo img {
  height: 1.5rem;
}

.mid-header__menu {
  display: flex;
  gap: 1.5rem;
}

.mid-header__menu a {
  color: black;
  text-decoration: none;
}

.mid-header__menu a:hover {
  text-decoration: underline;
}

.mid-header__right {
  display: flex;
  gap: 1.25rem;
  align-items: center;
}

.mid-header__icon {
  font-size: 1.25rem;
  text-decoration: none;
  color: black;
  display: flex;
  align-items: center;
  justify-content: center;
}

.mid-header__icon svg,
.mid-header__icon img {
  width: 1.25rem;
  height: 1.25rem;
  display: block;
}

.mid-header__icon:hover {
  opacity: 0.7;
}
{% endstylesheet %}

{% schema %}
{
  "name": "Main Header Menu",
  "settings": [
    {
      "type": "link_list",
      "id": "menu",
      "label": "Select menu"
    }
  ],
  "presets": [
    {
      "name": "Header with Logo and Menu"
    }
  ]
}
{% endschema %}